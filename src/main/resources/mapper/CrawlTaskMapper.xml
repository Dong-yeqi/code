<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.realestatetracker.mapper.CrawlTaskMapper">

    <resultMap id="BaseResultMap" type="com.example.realestatetracker.entity.CrawlTask">
        <id column="id" property="id"/>
        <result column="task_name" property="taskName"/>
        <result column="target_site" property="targetSite"/>
        <result column="city" property="city"/>
        <result column="region" property="region"/>
        <result column="list_url_template" property="listUrlTemplate"/>
        <result column="cron_expr" property="cronExpr"/>
        <result column="enabled" property="enabled"/>
        <result column="max_page" property="maxPage"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="com.example.realestatetracker.entity.CrawlTask">
        INSERT INTO t_crawl_task
        (task_name, target_site, city, region,
         list_url_template, cron_expr, enabled, max_page,
         create_time, update_time)
        VALUES
            (#{taskName}, #{targetSite}, #{city}, #{region},
             #{listUrlTemplate}, #{cronExpr}, #{enabled}, #{maxPage},
             NOW(), NOW())
    </insert>

    <update id="update" parameterType="com.example.realestatetracker.entity.CrawlTask">
        UPDATE t_crawl_task
        SET task_name=#{taskName},
            target_site=#{targetSite},
            city=#{city},
            region=#{region},
            list_url_template=#{listUrlTemplate},
            cron_expr=#{cronExpr},
            enabled=#{enabled},
            max_page=#{maxPage},
            update_time=NOW()
        WHERE id=#{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM t_crawl_task WHERE id=#{id}
    </delete>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM t_crawl_task WHERE id=#{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM t_crawl_task ORDER BY id DESC
    </select>

    <!-- ⭐ 启用任务查询 -->
    <select id="selectEnabled" resultMap="BaseResultMap">
        SELECT * FROM t_crawl_task
        WHERE enabled = 1
        ORDER BY id DESC
    </select>

</mapper>
